---
import ButtonWhite from '../components/ButtonWhite.astro';
---
<section class="relative mx-[calc(50%-50vw)] w-screen h-screen overflow-hidden text-[var(--color-beige)]">
  <!-- Baggrund fylder hele hÃ¸jden -->
  <picture aria-hidden="true" class="absolute inset-0">
    <source media="(min-width: 768px)" srcset="/HtpBg.svg" />
    <img
      src="/HtpBgMobile.svg"
      alt=""
      class="w-full h-full object-cover select-none pointer-events-none"
    />
  </picture>

  <!-- Overlay-indhold -->
  <div class="absolute inset-0 z-10 flex flex-col items-center text-center justify-start md:justify-center">
    <div class="w-full max-w-6xl">
      <h1 class="m-0 pt-0 md:pt-24 text-4xl leading-tight md:text-6xl md:leading-tight">
        How to participate
      </h1>
      <h2 class="m-0 md:mt-10 md:mb-12 text-base leading-relaxed md:text-xl">
        Got an instant photo ready for the public? <br />
        In order to take part in InstantDay do this:
      </h2>
    </div>

    <!-- Mobil-grafik -->
    <div class="md:hidden w-full flex justify-center">
      <img
        src="/svg/step_by_step_mobil.svg"
        alt=""
        class="block w-auto max-w-[90%] max-h-[40vh] h-auto scale-90 origin-top"
      />
    </div>

    <!-- Desktop-grafik -->
    <div class="hidden md:flex w-full justify-center">
      <img
        src="/svg/step_by_step.svg"
        alt=""
        class="block w-auto max-w-[1200px] h-auto"
      />
    </div>

    <!-- CTA -->
    <div class="mt-4 md:mt-12">
      <ButtonWhite><a href="/submit">Submit a photo</a></ButtonWhite>
    </div>
  </div>
</section>
